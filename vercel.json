{
  "version": 2,
  "name": "amautadev",
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "resources/js/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "resources/css/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": { "includeFiles": ["public/**", "resources/**", "storage/**"] }
    }
  ],
  "buildCommand": "npm install --legacy-peer-deps && npm run build",
  "outputDirectory": "public",
  "framework": "vite",
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_URL": "https://amautadev.vercel.app"
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
